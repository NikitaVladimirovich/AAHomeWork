<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/space1.5x"
    app:cardBackgroundColor="@color/darkBlue"
    app:cardCornerRadius="@dimen/space2x"
    app:cardElevation="@dimen/space6x"
    app:contentPadding="@dimen/movieCardStrokeWidth"
    app:strokeColor="@color/cardStroke"
    app:strokeWidth="@dimen/movieCardStrokeWidth">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="TODO"
            app:srcCompat="@drawable/movie_card_bg" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideVerticalLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="@dimen/space2x" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideVerticalRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="@dimen/space2x" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideHorizontalTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="@dimen/space2x" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivCover"
            android:layout_width="0dp"
            android:layout_height="@dimen/cardCoverHeight"
            android:layout_marginEnd="@dimen/movieCardStrokeWidth"
            android:layout_marginStart="@dimen/movieCardStrokeWidth"
            android:layout_marginTop="@dimen/movieCardStrokeWidth"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/MovieCard.ImageAppearance"
            tools:ignore="ContentDescription"
            tools:srcCompat="@drawable/orig" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/cover_mask"
            app:layout_constraintBottom_toBottomOf="@id/ivCover"
            app:layout_constraintEnd_toEndOf="@id/ivCover"
            app:layout_constraintStart_toStartOf="@id/ivCover"
            app:layout_constraintTop_toTopOf="@id/ivCover" />

        <LinearLayout
            android:id="@+id/llLike"
            android:layout_width="@dimen/space8x"
            android:layout_height="34dp"
            android:padding="@dimen/space2x"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/cbLike"
                style="@style/LikeCheckBox"
                android:layout_width="16dp"
                android:layout_height="14dp"
                android:layout_marginTop="@dimen/space"
                android:clickable="false"
                android:enabled="false" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvAgeLimit"
            style="@style/AgeLimit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/age_limit_rectangle"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="@id/guideVerticalLeft"
            app:layout_constraintTop_toTopOf="@id/guideHorizontalTop"
            tools:text="13+" />

        <TextView
            android:id="@+id/tvTags"
            style="@style/CardMovieTag"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space0.5x"
            app:layout_constraintBottom_toTopOf="@+id/tvReviews"
            app:layout_constraintLeft_toLeftOf="@id/guideVerticalLeft"
            app:layout_constraintRight_toRightOf="@id/guideVerticalRight"
            tools:text="Action, Adventure, Fantasy" />

        <com.aacademy.homework.ui.views.RatingBarSvg
            android:id="@+id/rbRating"
            style="@style/RatingBar"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space2x"
            android:indeterminate="false"
            android:isIndicator="true"
            android:numStars="5"
            android:stepSize="0.01"
            app:drawableHeight="@dimen/space2x"
            app:drawableWidth="@dimen/space2x"
            app:innerPadding="@dimen/space0.5x"
            app:layout_constraintBottom_toBottomOf="@+id/tvReviews"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="@id/guideVerticalLeft"
            app:layout_constraintRight_toLeftOf="@+id/tvReviews"
            app:layout_constraintTop_toTopOf="@+id/tvReviews"
            tools:rating="2" />

        <TextView
            android:id="@+id/tvReviews"
            style="@style/CardMovieReview"
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            android:layout_marginBottom="@dimen/space2x"
            android:layout_marginStart="@dimen/space2x"
            android:layout_marginTop="@dimen/space"
            android:textAllCaps="true"
            app:layout_constraintBottom_toBottomOf="@+id/ivCover"
            app:layout_constraintLeft_toRightOf="@+id/rbRating"
            app:layout_constraintRight_toRightOf="@id/guideVerticalRight"
            tools:text="125 reviews" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/space2x"
            app:layout_constraintTop_toBottomOf="@+id/ivCover">

            <TextView
                android:id="@+id/tvName"
                style="@style/CardMovieName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space5x"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="1"
                tools:text="Avengers: End Game" />

            <TextView
                android:id="@+id/tvMin"
                style="@style/CardMovieMin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                tools:text="137 MIN" />

        </LinearLayout>

        <ImageView
            android:id="@+id/ivLike"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="likeAnim"
            app:srcCompat="@drawable/ic_like_filled" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>