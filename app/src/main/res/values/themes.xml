<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AAHomeWork" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorBackgroundLight</item>
        <item name="colorPrimaryDark">@color/colorBackgroundLight</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowBackground">@color/colorBackgroundLight</item>

        <item name="colorBackground">@color/colorBackgroundLight</item>
        <item name="colorCardStroke">@color/colorCardStrokeLight</item>
        <item name="colorAccentPink">@color/colorAccentPink</item>
        <item name="colorText">@color/colorTextLight</item>
        <item name="colorCastNameText">@color/colorCastNameTextLight</item>
        <item name="colorSectionText">@color/colorSectionTextLight</item>
        <item name="colorTextShadow">@color/colorTextShadow</item>
        <item name="colorReviewsText">@color/colorReviewsTextLight</item>
        <item name="colorMinText">@color/colorMinTextLight</item>
        <item name="colorMovieMaskStart">@color/colorMovieMaskStartLight</item>
        <item name="colorMovieMaskEnd">@color/colorMovieMaskEnd</item>
    </style>
</resources>
