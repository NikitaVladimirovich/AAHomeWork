<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="CardText" parent="">
        <item name="android:textSize">@dimen/textSizeCard</item>
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:lineSpacingExtra">3sp</item>
    </style>

    <style name="CardText.Pink.Normal" parent="CardText">
        <item name="android:textColor">@color/pink</item>
    </style>

    <style name="CardText.Bold" parent="CardText">
        <item name="fontFamily">sans-serif-black</item>
    </style>

    <style name="CardText.DarkGray.Bold" parent="CardText.Bold">
        <item name="android:textColor">@color/darkGray</item>
    </style>

    <style name="CardText.DarkDarkGray.Bold" parent="CardText.Bold">
        <item name="android:textColor">@color/darkDarkGray</item>
    </style>

    <style name="SubText" parent="">
        <item name="android:textSize">@dimen/textSizeSub</item>
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="SubText.Bold" parent="SubText">
        <item name="fontFamily">sans-serif-black</item>
    </style>

    <style name="SubText.White.Normal" parent="SubText">
        <item name="android:textColor">@color/white</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>

    <style name="SubText.Pink.Normal" parent="SubText">
        <item name="android:textColor">@color/pink</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>

    <style name="SubText.White.Bold" parent="SubText.Bold">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SubText.LightGray.Bold" parent="SubText.Bold">
        <item name="android:textColor">@color/lightGray</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>

    <style name="SubText.DarkDarkGray.Bold" parent="SubText.Bold">
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>

    <style name="MainText" parent="">
        <item name="android:textSize">@dimen/textSizeMain</item>
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="MainText.Bold" parent="MainText">
        <item name="fontFamily">sans-serif-black</item>
    </style>

    <style name="MainText.Pink.Normal" parent="MainText">
        <item name="android:textColor">@color/pink</item>
    </style>

    <style name="MainText.Pink.Bold" parent="MainText.Bold">
        <item name="android:textColor">@color/pink</item>
    </style>

    <style name="MainText.DarkGray.Bold" parent="MainText.Bold">
        <item name="android:textColor">@color/darkGray</item>
    </style>

    <style name="MainText.White.Normal" parent="MainText">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MainText.White.Bold" parent="MainText.Bold">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MainText.LightLightGray.Bold" parent="MainText.Bold">
        <item name="android:textColor">@color/lightlightGray</item>
        <item name="android:shadowColor">#80000000</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowRadius">12</item>
    </style>

    <style name="HeaderText.LightGray.Bold" parent="">
        <item name="fontFamily">sans-serif-black</item>
        <item name="android:textColor">@color/lightGray</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">-0.01</item>
        <item name="android:lineSpacingExtra">0sp</item>
        <item name="android:shadowColor">#80000000</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowRadius">12</item>
        <item name="android:textSize">@dimen/textSizeHeader</item>
    </style>

    <style name="RatingBar" parent="">
        <item name="android:progressDrawable">@drawable/ratingbar_selector</item>
    </style>

    <style name="LikeCheckBox" parent="">
        <item name="android:button">@drawable/checkbox_selector</item>
    </style>
</resources>